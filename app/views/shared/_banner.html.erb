<% if @location.present? and @location.gallery.present? and @location.gallery.items.present? %>
  <div class="master-slider ms-skin-default" id="masterslider">
    <% @location.gallery.items.reorder('position ASC').each do |item| %>
    <a href="#welcome"><div class="banner-overlay hidden-xs"><img class="img-responsive" src="/assets/banner-overlay-scroll.png"></div></a>
      <div class="ms-slide slide-1" data-delay="4">
        <div class="overlay"></div>        
        <%= image_fu(item.image, "1920x935#c") %>
        <div class="ms-layer banner-text" data-type="text" data-delay="750" data-duration="2000" data-ease="easeOutExpo" data-resize="false">
          <% if @location.depth == 0 %>
            <h2>Discover</h2>
          <% end %>
          <h1><%= raw @location.name %></h1>
          <h3><%= @location.sub_name %></h3>
        </div>
        <img src="/assets/blank.gif" data-src="/assets/downarrow.png" class="ms-layer arrow hidden-xs" data-resize="false" data-type="image" data-delay="1500" data-duration="9000" data-ease="easeOutExpo" data-resize="false">
      </div>
    <% end %>

    <% if @location.countdown_timer.present? and @location.countdown_timer.strftime("%Y-%m-%d %H:%M:%S") > DateTime.now.strftime("%Y-%m-%d %H:%M:%S") %>
    <table class="countdown" id="count-down">
    <tr class="hidden-xs"><td colspan="4"><h1>Countdown</h1></td></tr>
    <tr><td>Days</td><td>Hours</td><td>Minutes</td><td>Seconds</td></tr>
    <tr><td class="county-days"></td><td class="county-hours"></td><td class="county-minutes"></td><td class="county-seconds"></td></tr>
    <tr><td colspan="4">
    <script type="text/javascript">
      function initialize() {
        $('#count-down').county({
          endDateTime: new Date('<%= @location.countdown_timer.strftime("%Y/%m/%d %k:%M:00").to_s %>'),
          animation: 'fade',
          reflection: false,
          theme: 'black'
        });
      }
      document.ready = function() { initialize(); };
    </script></td></tr>
    </table>
  <% end %>

</div>

